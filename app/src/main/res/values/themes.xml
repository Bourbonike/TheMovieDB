<resources>
    <!-- Base application theme. -->
    <style name="Theme.TheMovieDB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/graphite</item>
        <item name="colorPrimaryVariant">@color/graphite</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryDark">@color/graphite</item>
